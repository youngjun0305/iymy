<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main">

    <TextView
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="30sp"
        android:text="20분 후에 알림이 울립니다"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/mLinear"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@+id/banner">

        <TextView
            android:id="@+id/mAlarm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/mDlist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

    <ImageButton
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/mLinear"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/sbar"
        android:scaleType="fitXY"
        android:background="#FFF"
        android:layout_margin="10dp"/>


    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/search"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/camSearch"
        android:src="@drawable/makefg"
        android:scaleType="fitXY"
        android:background="#FFF"
        android:layout_marginTop="20dp"/>

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/search"
        app:layout_constraintLeft_toRightOf="@id/camSearch"
        app:layout_constraintRight_toLeftOf="@+id/pharmSearch"
        android:id="@+id/barSearch"
        android:src="@drawable/barcode"
        android:scaleType="fitXY"
        android:background="#FFF"
        android:layout_marginTop="20dp"/>

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/search"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/pharmSearch"
        android:src="@drawable/pharmacy"
        android:scaleType="fitXY"
        android:background="#FFF"
        android:layout_marginTop="20dp"/>

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/camSearch"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/alarm"
        android:id="@+id/pill"
        android:src="@drawable/medicine"
        android:scaleType="fitXY"
        android:background="#FFF"
        android:layout_marginTop="20dp"/>

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/camSearch"
        app:layout_constraintRight_toLeftOf="@+id/pill"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/alarm"
        android:background="#FFF"
        android:src="@drawable/alarm"
        android:scaleType="fitXY"
        android:layout_marginTop="20dp"/>

</android.support.constraint.ConstraintLayout>